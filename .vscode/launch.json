{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "back (emprego)",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/functions",
            "env": {
                "ADMIN_EMAIL":"mariano@aloi.com.br"
            }
        },
        {
            "type": "node-terminal",
            "name": "front (emprego)",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "name":"browser",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
        }
    ],
    "compounds": [
        {
            "name": "Run Both (Front + Back)",
            "configurations": [
                "front (emprego)",
                "back (emprego)",
                "browser"
            ],
            "stopAll": true
        }
    ]
}